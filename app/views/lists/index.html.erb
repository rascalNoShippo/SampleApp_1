<h1>投稿一覧</h1>

<% @lists.each do |list| %>

  <p class="title_head">タイトル</p>
  <span class="title_main"><%= link_to list.title, list_path(list.id) %></span>
  
  <p>画像</p>
  <% if list.image.attached? %>
    <%= image_tag list.image, size: "200x200" %>
  <% else %>
    <%= image_tag '66bsmofp.bmp', size: "200x200" %>
  <% end %>
<% end %>